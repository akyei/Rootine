<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/top_bar"
    android:background="@color/app_main"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--The first TextView represents the current score -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:id="@+id/points"
        android:textColor="@color/topBarText"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"/>
    <!-- Basic Title (Text is a placeholder) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/topBarText"
        android:textSize="30dp"
        android:text="Daily Routines"/>
    <!-- Contains the user's fb profile picture
    (I want to add on onClickListener here that opens an options menu)
    -->
   <!-- <com.facebook.login.widget.ProfilePictureView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/profile_pic"
        ></com.facebook.login.widget.ProfilePictureView> -->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/settings_button"
        android:src="@drawable/settings_button"/>
</RelativeLayout>