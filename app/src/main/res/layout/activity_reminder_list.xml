<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.team16umd.routineapp.ReminderListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/top_bar"
        android:background="@color/com_facebook_blue">

        <!--The first TextView represents the current score -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textColor="@color/topBarText"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"/>
        <!-- Basic Title (Text is a placeholder) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/topBarText"
            android:textSize="30dp"
            android:text="Daily Routines"/>
        <!-- Contains the user's fb profile picture
        (I want to add on onClickListener here that opens an options menu)
        -->
        <com.facebook.login.widget.ProfilePictureView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/profile_pic"
            ></com.facebook.login.widget.ProfilePictureView>
    </RelativeLayout>
    <include layout="@layout/content_reminder_list" />

    <!-- Footer of the page, has buttons leading to other activities -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottom_bar"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="#FFFFFF">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/badge_button"
            android:text="See Badges"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/social_button"
            android:layout_toRightOf="@+id/badge_button"
            android:text="Social Feed"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/graph_button"
            android:layout_toRightOf="@+id/social_button"
            android:text="Your History"
            android:textAllCaps="false"/>


    </RelativeLayout>

</RelativeLayout>
