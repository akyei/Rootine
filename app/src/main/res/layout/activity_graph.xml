<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.team16umd.routineapp.GraphActivity">

    <include layout="@layout/topbar_layout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your History"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:textColor="@color/brown"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/activity_information"
        android:background="@drawable/roospread">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Routine Name"
            android:textSize="@dimen/com_facebook_profilepictureview_preset_size_small"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:id="@+id/text_view" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Streak"
            android:id="@+id/best_streak_text"
            android:layout_marginStart="34dp"
            android:textColor="@color/brown"
            android:layout_centerInParent="true"
            android:layout_alignTop="@+id/current_streak_text"
            android:layout_alignStart="@+id/text_view" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="@color/brown"
            android:id="@+id/best_streak_number"
            android:text="500"
            android:textSize="@dimen/com_facebook_profilepictureview_preset_size_small"
            android:layout_above="@+id/best_streak_text"
            android:layout_alignStart="@+id/best_streak_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Streak"
            android:id="@+id/current_streak_text"
            android:textColor="@color/white"
            android:layout_marginStart="73dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/best_streak_number" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:textSize="@dimen/com_facebook_profilepictureview_preset_size_small"
            android:id="@+id/current_streak_number"
            android:textColor="@color/white"
            android:layout_alignTop="@+id/best_streak_number"
            android:layout_alignStart="@+id/current_streak_text" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select one of your Routines"
        android:textColor="@color/brown"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <View style="@style/Divider"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@android:id/list"
        android:divider="@color/light_brown"
        android:dividerHeight="4dp"
        android:layout_weight="5"/>

</LinearLayout>
